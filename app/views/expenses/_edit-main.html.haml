= form_for @expense do |f|
  - if @expense.errors.any?
    #error_explanation
      %h2= "#{pluralize(@expense.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @expense.errors.full_messages.each do |message|
          %li= message

.main
  = form_for @expense do |f|
    .form-group
      = f.label :amount, "金額"
      = f.number_field :amount
    = f.fields_for :event do |e|
      .form-group
        = e.collection_select :genre_ids, Genre.all, :id, :genre
        = e.label :date, "日付"
        = e.date_field :date
        = e.label :title, "名前"
        = e.text_field :title
    = f.submit "Send"